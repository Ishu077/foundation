# ============================================
# Backend Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# Command: cp .env.example .env

# ============================================
# MongoDB Connection
# ============================================
# For local MongoDB:
# MONGO_URL=mongodb://localhost:27017/text-summarizer

# For MongoDB Atlas (cloud):
MONGO_URL=mongourl

# ============================================
# JWT Secret Key
# ============================================
# Generate a strong random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=mysecretkeyforjsonauth

# ============================================
# Google Gemini AI API Key
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=key

# ============================================
# Redis Configuration
# ============================================
# Default values (optional if using localhost:6379)
REDIS_HOST=localhost
REDIS_PORT=6379

# Uncomment if your Redis instance requires authentication
# REDIS_PASSWORD=your_redis_password

# Uncomment if using Redis Cloud or other remote Redis
# REDIS_URL=redis://username:password@host:port

# ============================================
# Server Configuration
# ============================================
PORT=8080

# ============================================
# Node Environment
# ============================================
NODE_ENV=development


#for the development phase:
MONGO_URL=mongodb://127.0.0.1:27017
JWT_SECRET=mysecretkeyforjsonauth
GEMINI_API_KEY=key(from gemini)
FRONTEND_URL=http://localhost:5173
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
PORT=8080
NODE_ENV=development

